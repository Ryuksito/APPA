<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView_reference"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16sp"
        android:text="{author_initials}. {author_lastname} ({year_of_publication}). {title}, ({edition}da ed.), {place_of_publication}, {publisher}." />

    <ImageButton
        android:id="@+id/icon_button_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="edit item"
        android:scaleType="fitCenter"
        android:padding="8dp"
        android:src="@mipmap/edit_icon" />

    <ImageButton
        android:id="@+id/icon_button_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="delete item"
        android:scaleType="fitCenter"
        android:padding="8dp"
        android:src="@mipmap/delete_icon" />

</LinearLayout>
